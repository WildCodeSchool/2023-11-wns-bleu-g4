{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"extends": ["airbnb-base", "plugin:prettier/recommended", "plugin:jest/recommended"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [".js", ".jsx", ".ts", ".tsx"]
			}
		}
	},
	"rules": {
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"js": "never",
				"jsx": "never",
				"ts": "never",
				"tsx": "never"
			}
		],
		"max-len": [
			"error",
			{
				"code": 120
			}
		],
		"no-console": "off",
		"no-restricted-syntax": [
			"error",
			{
				"selector": "CallExpression[callee.object.name='console'][callee.property.name!=/^(error|warn|info)$/]",
				"message": "You can only call the error(), warn() and info() methods from the console object"
			}
		]
	}
}
