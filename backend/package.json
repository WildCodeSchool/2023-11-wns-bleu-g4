	"scripts": {
		"start": "concurrently \"ts-node-dev ./src/index.ts\" \"npm run checkLateBookings\"",
		"resetDB": "ts-node-dev src/resetDb.ts",
		"dev": "concurrently \"nodemon --legacy-watch src/index.ts\" \"npm run checkLateBookings\"",
		"build": "tsc",
		"prod": "concurrently \"node build/index.js\" \"npm run checkLateBookings:prod\"",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"prettier:fix": "prettier --write .",
		"test": "jest",
		"testDB:wait": "docker compose -f docker-compose.integration-tests.yml up testDB --wait",
		"checkLateBookings": "ts-node ./src/checkLateBookings.ts",
		"checkLateBookings:prod": "node build/checkLateBookings.js"
	},
